@import "vendor/ui"

.main-container
    padding-top  60px

.main-block
    margin      0 auto
    width       860px
    padding     20px
    background  rgba(255,255,255,0.9)
    box-shadow  0 0 30px rgba(0,0,0,0.2)
    min-height  500px
    border-radius 5px
    position    relative


.page-login
    
    .main-sub-block
        width   48%

    .main-left
        float   left
        padding-top 150px

    .main-right
        float   right
        padding-top 120px
    
    h2
        text-align  center

    .comp-form
        font-size   15px
        text-align  center

    .comp-form label
        display inline-block
        width   80px
        text-align  left

    .form-line-big
        margin-top  20px

.page-index
    
    display         none
    
    .role-create-room

        margin-bottom   10px

    .role-create-room-wrapper

        margin-top      10px
        display         none

    .role-create-room-name

        width           200px

